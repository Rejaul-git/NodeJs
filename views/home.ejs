<% layout("layouts/boilerplate.ejs") -%>
<h1>Home page</h1>

<% for(let camp of camps){ %>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img class="img-fluid" src="<%=camp.images[0].url %>" alt="" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%=camp.title %></h5>
        <p class="card-text"><%=camp.description %></p>
        <a href="/allcamp/<%=camp._id %>" class="btn btn-primary">show</a>
      </div>
    </div>
  </div>
</div>
<% } %>
